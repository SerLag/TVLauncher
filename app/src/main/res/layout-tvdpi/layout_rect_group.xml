<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_rect_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.droidlogic.tvlauncher.MyRelativeLayout
        android:id="@+id/layout_video"
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="105dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants">
        <ImageView
            android:id="@+id/img_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </com.droidlogic.tvlauncher.MyRelativeLayout>

    <com.droidlogic.tvlauncher.MyRelativeLayout
        android:id="@+id/layout_youtube"
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:layout_marginLeft="308dp"
        android:layout_marginTop="105dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants">
        <ImageView
            android:id="@+id/img_youtube"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </com.droidlogic.tvlauncher.MyRelativeLayout>

    <com.droidlogic.tvlauncher.MyRelativeLayout
        android:id="@+id/layout_kodi"
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:layout_marginLeft="552dp"
        android:layout_marginTop="105dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants">
        <ImageView
            android:id="@+id/img_kodi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>
    </com.droidlogic.tvlauncher.MyRelativeLayout>

    <com.droidlogic.tvlauncher.MyRelativeLayout
        android:id="@+id/layout_miracast"
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:layout_marginLeft="552dp"
        android:layout_marginTop="244dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants">

        <ImageView
            android:id="@+id/img_miracast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>
    </com.droidlogic.tvlauncher.MyRelativeLayout>

    <com.droidlogic.tvlauncher.MyRelativeLayout
        android:id="@+id/layout_browser"
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="244dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants">

        <ImageView
            android:id="@+id/img_browser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"/>
    </com.droidlogic.tvlauncher.MyRelativeLayout>

    <com.droidlogic.tvlauncher.MyRelativeLayout
        android:id="@+id/layout_playstore"
        android:layout_width="240dp"
        android:layout_height="135dp"
        android:layout_marginLeft="308dp"
        android:layout_marginTop="244dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants">
        <ImageView
            android:id="@+id/img_playstore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />
    </com.droidlogic.tvlauncher.MyRelativeLayout>
    <Button
        android:screenOrientation="landscape"
        android:id="@+id/settings_button"
        android:background="@drawable/settingsbuttonstate"
        android:visibility="visible"
        android:clickable="true"
        android:longClickable="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="810dp"
        android:layout_marginTop="107dp"
        android:text=""
        android:onClick="showSettings"/>
    <Button
        android:screenOrientation="landscape"
        android:id="@+id/filebrowser_button"
        android:background="@drawable/folderbuttonstate"
        android:visibility="visible"
        android:clickable="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text=""
        android:layout_below="@+id/settings_button"
        android:layout_alignRight="@+id/settings_button"
        android:onClick="showFileBrowser"/>
    <Button
        android:orientation="horizontal"
        android:id="@+id/apps_button"
        android:background="@drawable/app_iconstate"
        android:visibility="visible"
        android:clickable="true"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text=""
        android:layout_below="@+id/filebrowser_button"
        android:layout_alignRight="@+id/filebrowser_button"
        android:onClick="showApps"/>
</RelativeLayout>
